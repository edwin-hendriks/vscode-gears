{
    "name": "vscode-gears",
    "displayName": "GEARS Language Support",
    "description": "Support for the GEARS specification language",
    "icon": "img/GEARS_icon.png",
    "version": "0.8.1",
    "publisher": "edwin-hendriks",
    "homepage": "https://github.com/edwin-hendriks/vscode-gears",
    "license": "GPL-3.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/edwin-hendriks/vscode-gears.git"
    },
    "engines": {
        "vscode": "^1.47.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "gears",
        "SMART notation"
    ],
    "activationEvents": [
        "onLanguage:sn",
        "workspaceContains:**/*.sn"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "languages": [
            {
                "id": "sn",
                "extensions": [
                    ".sn",
                    ".gears"
                ],
                "aliases": [
                    "SMART notation"
                ]
            },
            {
                "id": "log",
                "extensions": [
                    ".log"
                ],
                "aliases": [
                    "Log"
                ],
                "mimetypes": [
                    "text/x-code-output"
                ]
            }
        ],
        "grammars": [
            {
                "language": "sn",
                "scopeName": "source.gears",
                "path": "./syntaxes/gears.json"
            },
            {
                "language": "log",
                "scopeName": "logging",
                "path": "./syntaxes/logging.json"
            }
        ],
        "configuration": {
            "title": "GEARS",
            "properties": {
                "gears.project.name": {
                    "type": "string",
                    "default": null,
                    "description": "Specifies the project name"
                },
                "gears.project.version": {
                    "type": "string",
                    "default": "0.1-SNAPSHOT",
                    "description": "Specifies the project version"
                },
                "gears.generator.version": {
                    "type": "string",
                    "default": null,
                    "description": "Specifies which version of the GEARS Generator should be used"
                },
                "gears.runner.version": {
                    "type": "string",
                    "default": null,
                    "description": "Specifies which version of the GEARS Runner should be used"
                },
                "gears.runtime.version": {
                    "type": "string",
                    "default": null,
                    "description": "Specifies which version of the GEARS Runtime should be used"
                },
                "gears.deploy.mode": {
                    "type": "string",
                    "enum": [
                        "docker",
                        "gears-cli",
                        "maven"
                    ],
                    "default": "docker",
                    "description": "Specifies the deployment mode to use"
                },
                "gears.runtime.management.mode": {
                    "type": "string",
                    "enum": [
                        "docker",
                        "docker-compose",
                        "gears-cli"
                    ],
                    "default": "docker-compose",
                    "description": "Specifies the Runtime management mode to use"
                },
                "gears.browser": {
                    "type": "string",
                    "default": "C:/Program Files (x86)/Google/Chrome/Application/chrome.exe",
                    "description": "Specifies the browser to use for displaying diagrams"
                },
                "gears.docker": {
                    "type": "string",
                    "default": "docker",
                    "description": "Specifies the Docker command to use"
                },
                "gears.file-pattern.specs": {
                    "type": "string",
                    "default": "*.sn",
                    "description": "Specifies the pattern for SN specifications"
                },
                "gears.file-pattern.data": {
                    "type": "string",
                    "default": "data/*.sql",
                    "description": "Specifies the pattern for loading data files"
                },
                "gears.file-pattern.scenarios": {
                    "type": "string",
                    "default": "scenarios/*.scenario",
                    "description": "Specifies the pattern for running scenario files"
                },
                "gears.runner.endpoint": {
                    "type": "string",
                    "default": "",
                    "description": "Specifies the endpoint for the GEARS Runner."
                },
                "gears.runner.extraArgs": {
                    "type": "string",
                    "default": "",
                    "description": "Specifies extra command line arguments for the GEARS Runner."
                }
            }
        },
        "problemMatchers": [
            {
                "name": "sn",
                "label": "GEARS Generator Problem Matcher (sn)",
                "owner": "sn",
                "fileLocation": "relative",
                "pattern": [
                    {
                        "regexp": "^(\\w+): (.*)$",
                        "severity": 1,
                        "message": 2
                    },
                    {
                        "regexp": "    (.*):(\\d+):(\\d+): (.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3
                    }
                ]
            }
        ],
        "themes": [
            {
                "label": "GEARS Light",
                "uiTheme": "vs",
                "path": "./themes/gears_light.json"
            }
        ],
        "keybindings": [
            {
                "key": "ctrl+alt+r",
                "command": "workbench.action.reloadWindow"
            },
            {
                "key": "ctrl+shift+alt+s",
                "command": "editor.action.showSnippets"
            }
        ],
        "snippets": [
            {
                "language": "sn",
                "path": "./snippets/gears.json"
            }
        ],
        "taskDefinitions": [
            {
                "type": "gears",
                "required": [
                    "name"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "The Gears task Edwin and Marcus will customize"
                    }
                }
            }
        ],
        "commands": [
            {
                "command": "gears.showDiagrams",
                "title": "GEARS: Show Diagrams"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "dependencies": {
        "open": "^7.2.0",
        "portfinder": "^1.0.27"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.32",
        "@types/node": "^6.14.10",
        "@types/vscode": "^1.47.0",
        "typescript": "^3.9.7",
        "vscode-jsonrpc": "^3.6.2",
        "vscode-languageclient": "^3.4.2"
    }
}
