{
    "name": "vscode-gears",
    "displayName": "GEARS Language Support",
    "description": "Support for the GEARS specification language",
    "icon": "img/GEARS_icon.png",
    "version": "0.7.1",
    "publisher": "edwin-hendriks",
    "homepage": "https://github.com/edwin-hendriks/vscode-gears",
    "license": "GPL-3.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/edwin-hendriks/vscode-gears.git"
    },
    "engines": {
        "vscode": "^1.15.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "gears",
        "SMART notation"
    ],
    "activationEvents": [
        "onLanguage:sn"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "languages": [
            {
                "id": "sn",
                "extensions": [
                    ".sn",
                    ".gears"
                ],
                "aliases": [
                    "SMART notation"
                ]
            },
            {
                "id": "log",
                "extensions": [
                    ".log"
                ],
                "aliases": [
                    "Log"
                ],
                "mimetypes": [
                    "text/x-code-output"
                ]
            }
        ],
        "grammars": [
            {
                "language": "sn",
                "scopeName": "source.gears",
                "path": "./syntaxes/gears.json"
            },
            {
                "language": "log",
                "scopeName": "logging",
                "path": "./syntaxes/logging.json"
            }
        ],
        "themes": [
            {
                "label": "GEARS Light",
                "uiTheme": "vs",
                "path": "./themes/gears_light.json"
            }
        ],
        "keybindings": [
            {
                "key": "ctrl+alt+r",
                "command": "workbench.action.reloadWindow"
            },
            {
                "key": "ctrl+shift+alt+s",
                "command": "editor.action.showSnippets"
            }
        ],
        "snippets": [
            {
                "language": "sn",
                "path": "./snippets/gears.json"
            }
        ],
        "taskDefinitions": [
            {
                "type": "gears",
                "required": [
                    "name"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "The Gears task Edwin and Marcus will customize"
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "dependencies": {
        "portfinder": "^1.0.26"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.32",
        "@types/node": "^6.14.10",
        "@types/vscode": "^1.45.1",
        "typescript": "^2.9.2",
        "vscode-jsonrpc": "^3.6.2",
        "vscode-languageclient": "^3.4.2"
    }
}
